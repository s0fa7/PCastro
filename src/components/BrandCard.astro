---
export interface Props {
  imageSrc: string;
  imageAlt: string;
  captionText: string;
}

const { imageSrc, imageAlt, captionText } = Astro.props;
---

<div class="brand-logo-card">
  <div class="logo-container">
    <img src={imageSrc} alt={imageAlt} class="logo-image" />
  </div>
  
  <p class="logo-caption">
    {captionText}
  </p>
</div>

<style>
  .brand-logo-card {
    border-radius: 8px;
    padding: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 100%;
    width: 100%;
    
    background-image: url(/src/assets/images/BrandBg.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-image {
    max-width: 100%;
    max-height: 58px;
  }

  .logo-caption {
    font-size: 14px;
    color: oklch(from var(--purple-text)l c h);
    text-transform: uppercase;
    font-family: "JetBrainsMono";

    margin-top: 10px;
  }
</style>