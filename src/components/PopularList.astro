---
import ProductCard from "./ProductCard.astro";
import GraphicCard from "../assets/images/products/product-card/graphic-card.png";
import Ram from "../assets/images/products/product-card/ram.png";
---

<div class="popular-list">
  <ProductCard
    id="001"
    photoSrc={GraphicCard}
    photoAlt="Graphic card"
    productTitle="Видеокарта"
    productSpec="16Gb"
    price="140 000"
  >
    MSI (G5080-16GTC) GeForce RTX 5080 16G GAMING TRIO OC
  </ProductCard>
  <ProductCard
    id="002"
    photoSrc={Ram}
    photoAlt="RAM"
    productTitle="Оперативная память"
    productSpec="32Gb"
    price="140 000"
  >
    TEAMGROUP T-Force Delta RGB [DDR5, 6000MHz, 2x16GB]
  </ProductCard>
  <ProductCard
    id="003"
    photoSrc={GraphicCard}
    photoAlt="Graphic card"
    productTitle="Видеокарта"
    productSpec="16Gb"
    price="140 000"
  >
    MSI (G5080-16GTC) GeForce RTX 5080 16G GAMING TRIO OC
  </ProductCard>
  <ProductCard
    id="004"
    photoSrc={Ram}
    photoAlt="RAM"
    productTitle="Оперативная память"
    productSpec="32Gb"
    price="140 000"
  >
    TEAMGROUP T-Force Delta RGB [DDR5, 6000MHz, 2x16GB]
  </ProductCard>
</div>

<style>
  .popular-list {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    justify-items: center;
    gap: 1.5rem;

    overflow-x: auto;

    max-width: 1536px;
    margin-inline: auto;
    padding-inline: 1rem;
  }

  @media (width >= 768px) {
    .popular-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (width >= 1240px) {
    .popular-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (width >= 1440px) {
    .popular-list {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
