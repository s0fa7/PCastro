---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import UserContolCard from "../components/UserContolCard.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
const myPath = [
    { text: "главное", href: "#" },
    { text: "корзина", href: "#" },
];
---

<Layout>
    <Header />
    <Nav items={myPath} />
    <UserContolCard
        imageSrc="src/assets/images/Cart.png"
        description="Выбирай комплектующие и добавляй их в корзину, чтобы оформить заказ."
    />
    <Footer />
</Layout>